<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:paddingVertical="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_136sdp"
        android:padding="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_white_grey">

        <ImageView
            android:id="@+id/iv_spesifikasi"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_42sdp"
            android:background="@drawable/ic_street_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_id_pekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center_vertical"
            android:text="9758378"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toEndOf="@+id/iv_spesifikasi"
            app:layout_constraintTop_toTopOf="@+id/iv_spesifikasi"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="09:34 | 2 Agu 2023"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toEndOf="@+id/iv_spesifikasi"
            app:layout_constraintTop_toBottomOf="@+id/tv_id_pekerjaan"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/tv_id_pju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="center_vertical"
            android:text="PJU GEJ123"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toTopOf="@+id/tv_address"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="@dimen/_133sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_vertical"
            android:text="Gejayan 1, Yogyakarta,Indonesia, "
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:maxLines="3"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Lihat Detail"
            android:textAllCaps="false"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_blue"
            app:layout_constraintTop_toTopOf="@+id/tv_id_pekerjaan" />

        <TextView
            android:id="@+id/tv_title_kerusakan"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="Kerusakan"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:textAlignment="viewEnd"
            android:textColor="@color/dark_blue"
            android:layout_marginVertical="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_detail"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlCompat">

            <TextView
                android:text="Baterai"
                android:id="@+id/textViewBaterai"
                android:background="@drawable/rounded_red"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:background="@drawable/rounded_orange"
                android:text="Lampu"

                android:layout_marginHorizontal="5sp"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"/>

            <TextView
                android:text="Arus"
                android:background="@drawable/rounded_blue"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>